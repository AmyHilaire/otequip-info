<!doctype html>
<html>
  <head>
    <title><%=current_article.title || "OT Equipment Info" %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= partial "layouts/head" %>
  </head>
  
  <body>
    <div class="header slim">
      <a href="/">
        <h1>OT Equipment Info</h1>
      </a>
    </div>

    <div class="article">
      <h1><%=current_article.title %></h1>
      <div class="date"><%= current_article.date.strftime('%e %b, %Y') %></div>
      <div id="main" role="main">
        <p><%= yield %></p>
      </div>
    </div>
  </body>
</html>
  